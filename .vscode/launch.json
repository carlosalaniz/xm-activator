    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "args": ["${relativeFile}"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": true,
            // "preLaunchTask": "npm: spec-and-routes",
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        },
        {
            "name": "Launch server",
            "type": "node",
            "request": "launch",
            "args": ["src/server"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": true,
            "preLaunchTask": "npm: spec-and-routes",
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        }
    ]
}