{
  "compilerOptions": {
    "noErrorTruncation": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ]
}